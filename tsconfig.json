{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "paths": {
      "@/*": ["./src/*"],
      "@interfaces/*": [
        "./src/interfaces/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@contexts/*": ["./src/contexts/*"],
      "@pages/*": ["./src/pages/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@libs/*": ["./src/libs/*"],
      "@model/*": ["./src/model/*"],
      "@services/*": ["./src/services/*"],
      "@providers/*": [
        "./src/providers/*"
      ],
      "@utils/*": ["./src/utils/*"],
      "@styles/*": ["./src/styles/*"],
      "@infrastructure/*": [
        "./src/infrastructure/*"
      ],
      "@assets/*": ["./src/assets/*"]
    }
  },
  "exclude": ["node_modules"]
}
